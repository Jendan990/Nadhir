<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".DetailsViewer">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_1_nothing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:text="House  Details"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_house_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/card_1_nothing"
                app:layout_constraintTop_toBottomOf="@id/card_1_nothing"
                android:layout_marginTop="15dp"
                android:text="House ID"
                android:textSize="16sp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_house_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/text_house_id"
                app:layout_constraintEnd_toEndOf="@id/card_1_nothing"
                app:layout_constraintStart_toEndOf="@id/text_house_id"
                app:layout_constraintTop_toTopOf="@id/text_house_id"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/text_house_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/text_house_id"
                app:layout_constraintTop_toBottomOf="@id/text_house_id"
                android:layout_marginTop="20dp"
                android:text="House Location"
                android:textSize="16sp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/text_house_location"
                app:layout_constraintEnd_toEndOf="@id/chip_house_id"
                app:layout_constraintStart_toEndOf="@id/text_house_location"
                app:layout_constraintTop_toTopOf="@id/text_house_location"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/text_room_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/text_house_location"
                app:layout_constraintTop_toBottomOf="@id/text_house_location"
                android:layout_marginTop="20dp"
                android:text="Room Number"
                android:textSize="16sp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_room_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/text_room_number"
                app:layout_constraintEnd_toEndOf="@id/chip_location"
                app:layout_constraintStart_toEndOf="@id/text_room_number"
                app:layout_constraintTop_toTopOf="@id/text_room_number"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/text_rent_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/text_room_number"
                app:layout_constraintTop_toBottomOf="@id/text_room_number"
                android:layout_marginTop="20dp"
                android:text="Rent Price"
                android:textSize="16sp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_rent_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/text_rent_price"
                app:layout_constraintEnd_toEndOf="@id/chip_room_number"
                app:layout_constraintStart_toEndOf="@id/text_rent_price"
                app:layout_constraintTop_toTopOf="@id/text_rent_price"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_2_nothing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_rent_price"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:text="Tenant  Details"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_tenant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/card_2_nothing"
                app:layout_constraintTop_toBottomOf="@id/card_2_nothing"
                android:layout_marginTop="20dp"
                android:text="Tenant Name"
                android:textSize="16sp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tenant_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/text_tenant_name"
                app:layout_constraintEnd_toEndOf="@id/card_2_nothing"
                app:layout_constraintStart_toEndOf="@id/text_tenant_name"
                app:layout_constraintTop_toTopOf="@id/text_tenant_name"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/text_tenant_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/text_tenant_name"
                app:layout_constraintTop_toBottomOf="@id/text_tenant_name"
                android:layout_marginTop="20dp"
                android:text="Tenant Phone"
                android:textSize="16sp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tenant_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/text_tenant_number"
                app:layout_constraintEnd_toEndOf="@id/chip_tenant_name"
                app:layout_constraintStart_toEndOf="@id/text_tenant_number"
                app:layout_constraintTop_toTopOf="@id/text_tenant_number"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/text_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/text_tenant_number"
                app:layout_constraintTop_toBottomOf="@id/text_tenant_number"
                android:layout_marginTop="20dp"
                android:text="Rent End Date"
                android:textSize="16sp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/text_end_date"
                app:layout_constraintEnd_toEndOf="@id/chip_tenant_number"
                app:layout_constraintStart_toEndOf="@id/text_end_date"
                app:layout_constraintTop_toTopOf="@id/text_end_date"
                tools:ignore="SpeakableTextPresentCheck" />


            <Button
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_end_date"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                android:text="Edit Data"
                android:textAllCaps="false"
                android:textSize="16sp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</ScrollView>